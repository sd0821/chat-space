.message-list
  .message-index
    .message-name 
      = message.user.name
    .message-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-text
    - if message.content.present?
      .Message-content
        = message.content
    = image_tag message.image.url, class: 'Message-image' if message.image.present?